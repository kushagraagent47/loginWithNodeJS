<div class="jumbotron">
    <form action ="/users/register" method="POST">
  <div class="form-group has-success">
    <label class="form-control-label" for="inputSuccess1">Name</label>
    <input
      type="text"
      value="<%= typeof name != 'undefined' ? name : '' %>"
      class="form-control is-valid"
      id="name"
    />
    <div class="valid-feedback">Enter your name</div>
  </div>
  <div class="form-group has-success">
    <label class="form-control-label" for="inputSuccess1">Email</label>
    <input
      type="text"
      value="<%= typeof name != 'undefined' ? email : '' %>"
      class="form-control is-valid"
      id="email"
    />
    <div class="valid-feedback">Enter your email</div>
  </div>
  <div class="form-group has-success">
    <label class="form-control-label" for="inputSuccess1">Password</label>
    <input
      type="text"
      value="<%= typeof name != 'undefined' ? password : '' %>"
      class="form-control is-valid"
      id="password"
    />
    <div class="valid-feedback">Enter your password</div>
  </div>
  <div class="form-group has-success">
        <label class="form-control-label" for="inputSuccess1">Confirm Password</label>
        <input
          type="text"
          value="<%= typeof name != 'undefined' ? password2 : ''%>"
          class="form-control is-valid"
          id="password2"
        />
        <div class="valid-feedback">Confirm Password</div>
      </div>
      <button type="submit" class="btn btn-primary btn-lg btn-block">Register</button>
</form>
<br>
<br>
<a href="/users/login" class="card-link">Have an account?Login</a>

</div>
